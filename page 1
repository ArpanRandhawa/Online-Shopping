try:
    import tkinter
except ImportError:
    import Tkinter as tkinter

a=tkinter.Tk()
def radio():
    a3=tkinter.Toplevel(a)
    a3.geometry('1500x1000')
    a3.title("PURPLE PEBBLES")
    a3.mainloop()
def radio20():
    optionframe=tkinter.LabelFrame(a,text="categories")
    optionframe.grid(row=5,column=3,sticky='w')
