def operation():
    a1=tkinter.Toplevel(a)
    a1.geometry('700x550')
    a1['padx']=36
    a1.title("SIGN IN")
    label=tkinter.Label(a1,text="PURPLE PEBBLES")
    label.grid(row=0,column=0,columnspan=2)
    a1.columnconfigure(0, weight=100)
    a1.columnconfigure(1, weight=100)

    usernamelabel=tkinter.Label(a1,text="USERNAME")
    usernamelabel.grid(row=1,column=0,columnspan=2,sticky='w')
    username=tkinter.Entry(a1)

    username.grid(row=2,column=0,columnspan=2,sticky='w')
    m1=username.get()
    passwordlabel=tkinter.Label(a1,text="PASSWORD")
    passwordlabel.grid(row=3,column=0,columnspan=2,sticky='w')
    password=tkinter.Entry(a1)
    password.grid(row=4,column=0,columnspan=2,sticky='w')
    m2=password.get()
    okbutton=tkinter.Button(a1,text="OK",command=mn)
    cancelbutton=tkinter.Button(a1,text="CANCEL",command=a1.quit)
    okbutton.grid(row=5,column=0,sticky='e')
    cancelbutton.grid(row=5,column=1,sticky='w')
    a1.mainloop()
a.title("PURPLE PEBBLES")
a.columnconfigure(0,weight=1000)
a.columnconfigure(1,weight=700)
a.rowconfigure(0,weight=100)
a.rowconfigure(1,weight=200)
a.rowconfigure(2,weight=200)
a.rowconfigure(3,weight=200)
a.geometry("1500x1000")
a.configure(background="purple")
label=tkinter.Label(a,text="PURPLE PEBBLES",bg="violet",font="algerian 40 bold underline")
label.grid(row=0,column=0,sticky='nsew')
label2=tkinter.Label(a,text="WELCOMES YOU",bg="violet",font="algerian 40 bold underline")
label2.grid(row=2,column=2)
my_image=tkinter.PhotoImage(file="F:\\pebbles.png")
a['pady']=8
label=tkinter.Label(a,image=my_image)
label.grid(row=1,column=1)
signin=tkinter.Button(a,text="sign in",bg="pink",width=25,height=3,command=operation)
create=tkinter.Button(a,text="create new account",bg="pink",width=25,height=3)
signin.grid(row=3,column=0,sticky='e')
create.grid(row=3,column=1,sticky='w')
a.mainloop()
